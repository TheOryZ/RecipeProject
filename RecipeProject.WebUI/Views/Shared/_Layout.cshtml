  <link rel="apple-touch-icon" sizes="180x180" href="~/templates/recipe-book-html-template-master/recipe-book-html-template-master/images/favicon/apple-icon-180x180.png" />
  <link rel="icon" type="image/png" sizes="192x192" href="~/templates/recipe-book-html-template-master/recipe-book-html-template-master/images/favicon/android-icon-192x192.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="~/templates/recipe-book-html-template-master/recipe-book-html-template-master/images/favicon/favicon-16x16.png" />
